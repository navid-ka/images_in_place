#:import rgba kivy.utils.rgba


<HBoxWidget>:
    first_image: first_image
    # ---------- Display Images----------
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        
        Image:
            id: first_image  # <---- I want the root.get.image to go to this source
            source: app.first_image


<VBoxWidget1>:
    
# ---------- Button Save Load ----------
    BoxLayout:
        orientation: "horizontal"
        size: [1,.25]
        pos: root.pos
        
        Button:
            text: "Upload Image"
            background_color: rgba('A94A64')
            on_press: root.get_image_one()

        Button:
            text: "Save"
            background_color: rgba('A94A64')
            #on_press: root.save_image_one()
        Button:
            text: "Darker"
            background_color: rgba('A94A64')
            on_press: root.right_half_darker(app.first_image)
        Button:
            text: "Save"
            background_color: rgba('A94A64')
            #on_press: root.save_image_one()

        Widget: 

<VBoxWidget2>:
# ---------- Button Slider ----------
    BoxLayout:
        orientation: "horizontal"
        size: [1,.25]
        pos: root.pos
        Slider:
            id: slider
            min: 0
            max: 100
            step: 1
            orientation: 'horizontal'
        Slider:
            id: slider
            min: 0
            max: 100
            step: 1
            orientation: 'horizontal'
        Widget: 

<ContainerBox>:
    orientation: 'vertical'
    Label:
        text: "Images_in_place"
        font_name: "Nunito"
        bold: True
        color: rgba('A94A64')
        size_hint_y: 0.1
    BoxLayout:
        id: four_horizontals
        orientation: 'horizontal'
        HBoxWidget:
        BoxLayout:
            orientation:'vertical'
            BoxLayout:
                #size_hint_y: 0 to 1 - it says how much you reduce height. Now its 1/3 of its parent, because there are 3 boxlayouts. if you set 0.5, it will have 1/3*0.5 and the other 2 boxlayouts takes the height which you took from this one 
            BoxLayout:
                orientation:'vertical'
                VBoxWidget1:
                VBoxWidget2:
